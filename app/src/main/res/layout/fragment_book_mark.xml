<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="org.kjh.mytravel.ui.features.bookmark.BookmarkViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_bookmarkContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <include
            layout="@layout/layout_toolbar_common"
            app:title="@{@string/bookmark}" />

       <include
           layout="@layout/layout_empty_bookmark"
           app:show="@{viewModel.uiState.bookmarkItems.size == 0}" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/bookmarksRecyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/tb_toolBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="3"
            bindItems="@{viewModel.uiState.bookmarkItems}"
            tools:listitem="@layout/vh_bookmark_day_log_item"/>

        <include
            layout="@layout/layout_progress_bar_common"
            app:show="@{viewModel.uiState.loading}"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
