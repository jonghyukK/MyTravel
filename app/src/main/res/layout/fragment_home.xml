<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="fragment"
            type="org.kjh.mytravel.ui.home.HomeFragment" />
        <variable
            name="viewModel"
            type="org.kjh.mytravel.ui.home.HomeViewModel" />
        <variable
            name="placeRankingListAdapter"
            type="org.kjh.mytravel.ui.home.ranking.PlaceRankingListAdapter" />
        <variable
            name="latestPostListAdapter"
            type="org.kjh.mytravel.ui.home.latest.LatestPostPagingDataAdapter" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/cl_homeCoordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/abl_homeAppBarLayout"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:fitsSystemWindows="true"
            toolbar="@{tbHomeToolbar}"
            collapsingToolbar="@{ctlHomeCollapsingToolbar}"
            android:background="@color/white">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/ctl_homeCollapsingToolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:scrimAnimationDuration="0"
                app:titleEnabled="false">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_homeBannerList"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:orientation="horizontal"
                    android:fitsSystemWindows="true"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    addOnScrollListener="@{viewModel.homeBannersUiState.toData().size()}"
                    bindHomeBannerItems="@{viewModel.homeBannersUiState}"
                    errorCallback="@{viewModel.initHomeBannersUiState}"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0.7" />

                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/tb_homeToolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:title="@string/app_name"
                    app:layout_collapseMode="pin"
                    />
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_homeRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            bindPlaceRankingItems="@{viewModel.homeRankingsUiState}"
            bindLatestPostItems="@{viewModel.latestPostsPagingData}"
            errorCallback="@{viewModel.initPlaceRankingsUiState}"
            placeRankingListAdapter="@{placeRankingListAdapter}"
            latestPostListAdapter="@{latestPostListAdapter}"
            scope="@{viewModel.scope}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
