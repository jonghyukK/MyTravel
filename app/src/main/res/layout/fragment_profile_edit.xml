<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="org.kjh.mytravel.ui.profile.edit.ProfileEditViewModel" />
        <variable
            name="fragment"
            type="org.kjh.mytravel.ui.profile.edit.ProfileEditFragment" />
        <variable
            name="myProfileViewModel"
            type="org.kjh.mytravel.MyProfileViewModel" />
        <variable
            name="initNickName"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/tb_profileEditToolbar"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/siv_profileImg"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="70dp"
            app:imgUrl="@{viewModel.profileImg}"
            app:shapeAppearanceOverlay="@style/circle"
            app:layout_constraintTop_toBottomOf="@+id/tb_profileEditToolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_profileEdit"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:background="#999999"
            android:text="@string/edit"
            android:textColor="@color/white"
            android:gravity="center"
            android:onClick="@{fragment::onClickEdit}"
            app:layout_constraintTop_toBottomOf="@+id/siv_profileImg"
            app:layout_constraintStart_toStartOf="@+id/siv_profileImg"
            app:layout_constraintEnd_toEndOf="@+id/siv_profileImg"/>

        <TextView
            android:id="@+id/tv_nickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nickName"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_profileEdit"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/et_nickNameEdit"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="15dp"
            android:text="@={viewModel.inputNickName}"
            app:layout_constraintTop_toBottomOf="@+id/tv_nickName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_introduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/et_nickNameEdit"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/introduce"/>

        <EditText
            android:id="@+id/et_introduceEdit"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="15dp"
            android:text="@={viewModel.inputIntroduce}"
            app:layout_constraintTop_toBottomOf="@+id/tv_introduce"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/btn_save"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="25dp"
            android:onClick="@{fragment::onClickSave}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_introduceEdit"
            android:text="@string/save"/>

        <ProgressBar
            android:id="@+id/pb_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            showLoading="@{viewModel.profileUpdateState}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
