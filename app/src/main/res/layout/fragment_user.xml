<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="org.kjh.mytravel.ui.features.profile.user.UserViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/cdl_userProfileContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/abl_userProfileAppBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/ctl_userProfileCollapsingToolbarLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:titleEnabled="false"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
                setApplyWindowInsetListenerAsNull="@{true}">

                <include
                    android:id="@+id/layout_userProfileInfo"
                    layout="@layout/layout_profile_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:profileImg="@{viewModel.uiState.userItem.profileImg}"
                    app:dayLogCount="@{String.valueOf(viewModel.uiState.userItem.postCount)}"
                    app:followCount="@{String.valueOf(viewModel.uiState.userItem.followCount)}"
                    app:followingCount="@{String.valueOf(viewModel.uiState.userItem.followingCount)}"
                    app:introduce="@{viewModel.uiState.userItem.introduce}"
                    app:isMyProfile="@{false}"
                    app:isFollowing="@{viewModel.uiState.userItem.following}"
                    app:onAction="@{viewModel.requestUpdateFollowState}"
                    marginTopForSumToolbarAndStatusBar="@{true}" />

                <include
                    android:id="@+id/layout_user_profile_toolbar"
                    layout="@layout/layout_toolbar_common"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/toolbar_height"
                    app:layout_collapseMode="pin"
                    app:title="@{viewModel.uiState.userItem.nickName}"/>
            </com.google.android.material.appbar.CollapsingToolbarLayout>

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/postsTabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/postsViewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"  />

        <include
            layout="@layout/layout_progress_bar_common"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:show="@{viewModel.uiState.loading}"
            android:gravity="center|center_vertical" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
