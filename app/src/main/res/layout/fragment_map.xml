<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="org.kjh.mytravel.ui.features.profile.upload.MapViewModel" />
        <variable
            name="fragment"
            type="org.kjh.mytravel.ui.features.profile.upload.MapFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/tb_mapToolbar"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/map"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/tb_mapToolbar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:name="com.naver.maps.map.MapFragment"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_openSearch"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="#7732ff"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/bg_white_solid_corner"
            android:onClick="@{fragment::onClickOpenMapSearchFragment}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tb_mapToolbar"
            android:text="@string/search_address_and_name" />

        <Button
            android:id="@+id/btn_addPlaceInfo"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="30dp"
            android:visibility="@{viewModel.selectedLocationItem == null ? View.GONE : View.VISIBLE}"
            android:onClick="@{() -> fragment.onClickApplySearchedPlace(viewModel.selectedLocationItem)}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/apply_current_place"/>
   </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
