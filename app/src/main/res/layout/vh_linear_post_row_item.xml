<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="postItem"
            type="org.kjh.mytravel.model.Post" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/test123"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="30dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/siv_profileImg"
            style="@style/CircleProfileImg"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:layout_constraintTop_toBottomOf="@+id/topGuideLine"
            app:layout_constraintStart_toEndOf="@+id/startGuideLine"
            app:imgUrl="@{postItem.profileImg}"/>

        <TextView
            android:id="@+id/tv_nickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="@{postItem.nickName}"
            app:layout_constraintTop_toTopOf="@+id/siv_profileImg"
            app:layout_constraintStart_toEndOf="@+id/siv_profileImg"
            app:layout_constraintBottom_toTopOf="@+id/tv_placeName"/>

        <TextView
            android:id="@+id/tv_placeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#777"
            android:text="@{postItem.placeName + ` | ` + postItem.cityName + ` | ` + postItem.subCityName}"
            app:layout_constraintStart_toStartOf="@+id/tv_nickName"
            app:layout_constraintTop_toBottomOf="@+id/tv_nickName"
            app:layout_constraintBottom_toBottomOf="@+id/siv_profileImg"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/postImgRecyclerView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal"
            android:nestedScrollingEnabled="false"
            app:layout_constraintTop_toBottomOf="@+id/siv_profileImg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:listItem="@layout/vh_rect_image"/>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{postItem.content}"
            android:textSize="13sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/postImgRecyclerView"
            app:layout_constraintStart_toEndOf="@+id/startGuideLine"
            app:layout_constraintEnd_toStartOf="@+id/endGuideline"
            android:textAlignment="textStart" />

        <ImageView
            android:id="@+id/iv_bookmark"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@{postItem.isBookmarked ? @drawable/ic_bookmark_active : @drawable/ic_bookmark_inactive}"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toBottomOf="@+id/postImgRecyclerView"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textSize="12sp"
            android:textColor="#9e9e9e"
            app:layout_constraintTop_toBottomOf="@+id/tv_content"
            app:layout_constraintStart_toEndOf="@+id/startGuideLine"
            android:text="@{postItem.createdDate}"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/topGuideLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="20dp"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/startGuideLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="15dp"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/endGuideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="70dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
