<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="myProfileViewModel"
            type="org.kjh.mytravel.ui.features.profile.my.MyProfileViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/layout_setting_toolbar"
            layout="@layout/layout_toolbar_common" />

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:backgroundTint="@color/white"
            android:textColor="@color/purple_500"
            android:stateListAnimator="@null"
            app:layout_constraintTop_toBottomOf="@+id/layout_setting_toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            onThrottleClick="@{myProfileViewModel::requestLogOut}"
            android:text="@string/logout"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
