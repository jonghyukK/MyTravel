<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="placeItemUiState"
            type="org.kjh.mytravel.uistate.PlaceItemUiState" />
    </data>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_eventListContainer"
            android:layout_width="150dp"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_eventImg"
                android:layout_width="0dp"
                android:layout_height="150dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cardCornerRadius="8dp">

                <ImageView
                    android:id="@+id/iv_eventImg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:imgResource="@{placeItemUiState.placeImages[0]}"
                    app:layout_constraintDimensionRatio="1:1" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/iv_eventName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@{placeItemUiState.placeName}"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#444444"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cv_eventImg" />

            <TextView
                android:id="@+id/tv_eventAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/iv_eventName"
                app:layout_constraintStart_toStartOf="parent"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="7dp"
                android:text="@{placeItemUiState.placeAddress}"
                android:textSize="13sp"
                android:textColor="#999999"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
