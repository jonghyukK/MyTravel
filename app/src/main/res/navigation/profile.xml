<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile"
    app:startDestination="@+id/profileFragment">

    <fragment
        android:id="@+id/profileFragment"
        android:name="org.kjh.mytravel.ui.profile.ProfileFragment"
        android:label="MyPage"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_selectPhotoFragment"
            app:destination="@id/nav_nested_upload" />
    </fragment>
    <fragment
        android:id="@+id/notLoginFragment"
        android:name="org.kjh.mytravel.ui.profile.NotLoginFragment"
        android:label="NotLoginFragment"
        tools:layout="@layout/fragment_not_login"/>
    <navigation android:id="@+id/nav_nested_upload"
        app:startDestination="@id/selectPhotoFragment">
        <fragment
            android:id="@+id/selectPhotoFragment"
            android:name="org.kjh.mytravel.ui.upload.SelectPhotoFragment"
            tools:layout="@layout/fragment_select_photo">
            <action
                android:id="@+id/action_selectPhotoFragment_to_writePostFragment"
                app:destination="@id/writePostFragment" />
        </fragment>
        <fragment
            android:id="@+id/writePostFragment"
            android:name="org.kjh.mytravel.ui.upload.WritePostFragment"
            android:label="fragment_write_post"
            tools:layout="@layout/fragment_write_post" />
        <action
            android:id="@+id/action_global_profileFragment"
            app:destination="@id/profileFragment"
            app:popUpTo="@+id/profileFragment"
            app:popUpToInclusive="false"/>
    </navigation>

</navigation>